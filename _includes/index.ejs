<!DOCTYPE html>
<html lang="en">
    <%- include("/partials/_head.ejs") -%>
<body>
    <%- include("partials/_nav.ejs") -%>
    <div class="index-content header">
        <h1 class="title"><%= title %></h1>
        <div class="sub-title"><%= subTitle %></div>
    </div>
    <section id="home" class="section section-anchor">
        <img class="section-img-hero" 
            src="static/images/backgrounds/astronaut-over-earth-crop.jpg " 
            srcset="static/images/backgrounds/astronaut-over-earth.jpg 1600w,
                    static/images/backgrounds/astronaut-over-earth.jpg 1000w,
                    static/images/backgrounds/astronaut-over-earth-crop.jpg 999w
                    static/images/backgrounds/astronaut-over-earth-crop.jpg 500w"
            sizes="100vw"  
        >
        </img>
        <div class="section__text">
            <%- firstBox -%>
        </div>
    </section>
    <section id="services" class="section section-services section-anchor">
        <header class="section-header">
            <h1 class="title"><%= servicesTitle %></h1>
            <div class="sub-title"><%= servicesSubtitle %></div>
        </header>
    </section>
    <%= content %>
    <%- include("/partials/_footer.ejs")-%> 
</body>
</html>

