<!DOCTYPE html>
<html lang="en">
    <%- include("/partials/_head.ejs") -%>
    <body>
    <%- include("partials/_nav.ejs") -%>
    <div class="fixed-background"></div>
    <%- include("partials/_title.ejs") -%>
    <section class="section contact-section">
        <h2 class="contact-message"><%= getInTouchMessage %></h2>
        <div class="contact-btn-set">
            <a class="button contact-button" href="mailto:<%= email %>">
                <img class="button-content icon" src="/static/images/icons/mail.png" />
                <span class="button-content"><%= email %></span>
            </a>
            <a class="button contact-button" href="tel:<%= phone %>">
                <img class="button-content icon" style="height:35px;" src="/static/images/icons/phone.png"/>
            <span class="button-content"><%= phoneDisplay %></span>
            </a>
        </div>
        <div class="address-info">
            <p><%= address %></p>
            <p><%= suite %></p>
            <p><%= city %>, <%= province %>, <%= country %></p>
            <p><%= postal %></p>
        </div>
        <div>
            <form name="contact" method="POST" netlify>
                <p>
                  <label>Your Name: <input type="text" name="name" /></label>   
                </p>
                <p>
                  <label>Your Email: <input type="email" name="email" /></label>
                </p>
                <p>
                  <label>Message: <textarea name="message"></textarea></label>
                </p>
                <p>
                  <button type="submit">Send</button>
                </p>
            </form>
        </div>
    </section>
    <%= content %>
    <%- include("/partials/_footer.ejs") %> 
</body>
</html>